<% form_for [:admin, @page_layout] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @page_layout,
    :include_object_name => true
  } %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_area :description, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :preview_image -%>
    <%= f.file_field :preview_image -%>
  </div>
  
  <div class='field'>
    <%#= f.label :parts -%>
    <%#= f.text_field :parts -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.page_layouts.page_layout.delete'),
                :delete_confirmation => t('shared.admin.delete.message', :title => @page_layout.title)
              } %>
<% end -%>
